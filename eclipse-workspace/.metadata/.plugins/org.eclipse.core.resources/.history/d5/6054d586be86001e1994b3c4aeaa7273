package demo;

import java.util.Scanner;
import java.util.Arrays;

public class Test {
    public static void main(String[] args) {
        Circle circle1 = new Circle();
        System.out.println("area and perimeter: " + circle1.getArea() + "and " + circle1.getPerimeter());
        
        Circle circle2 = new Circle(25);
        System.out.println("area and perimeter: " + circle2.getArea() + "and " + circle2.getPerimeter());
    }
    
    class Circle{
    	double radius = 1;
    	Circle(){
    	}
    	Circle(double newRadius){
    		radius = newRadius;
    	}
    	
    	double getArea() {
    		return radius * radius * Math.PI;
    	}
    	
    	double getPerimeter() {
    		return 2 * Math.PI * radius;
    	}
    	
    	void setRadius (double newRadius) {
    		radius = newRadius;
    	}
    }
}

